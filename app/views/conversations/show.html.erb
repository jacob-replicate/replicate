<div class="flex-1 overflow-hidden px-4 pb-4 xl:px-40 2xl:px-80">
  <div class="flex flex-col h-full">

    <div class="flex-1 overflow-y-auto border border-gray-200 mb-4 p-4 rounded" id="conversation">
      <% @conversation.messages.each do |m| %>
        <div><%= m.user.present? ? "You" : "AI" %>: <%= m.content %></div>
      <% end %>
    </div>

    <div class="flex items-center gap-2">
      <textarea placeholder="Type a message..." class="w-full border border-gray-200 rounded-lg p-2 resize-none" rows="1" oninput="this.style.height = 'auto'; this.style.height = this.scrollHeight + 'px';"></textarea>
      <button class="bg-slate-500 text-white px-4 py-2 rounded-lg hover:bg-slate-600 ml-auto h-full">Send</button>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    window.consumer.subscriptions.create({ channel: "ConversationChannel", id: "<%= @conversation.id %>" },
      {
        received(data) {
          const el = document.createElement("div");
          el.textContent = `${data.user_submitted ? "You" : "AI"}: ${data.message}`;
          document.getElementById("conversation")?.appendChild(el);
        }
      }
    );
  });
</script>