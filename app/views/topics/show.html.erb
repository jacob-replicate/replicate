<div class="mt-4 space-y-8">
  <section class="bg-white dark:bg-zinc-800 rounded-md shadow-xs overflow-hidden border-2 border-zinc-300 dark:border-zinc-700">
    <div class="px-4 pt-4 pb-3">
      <div class="flex items-center justify-between gap-3">
        <div>
          <h2 class="text-[15px] font-semibold text-zinc-800 dark:text-zinc-100"><%= @topic.name %></h2>
          <% if @topic.description.present? %>
            <p class="text-[13px] text-zinc-500 dark:text-zinc-400 mt-0.5"><%= @topic.description %></p>
          <% end %>
        </div>
        <% if @experience_count > 0 %>
          <span class="text-[11px] tabular-nums flex-shrink-0 <%= @completed_count == @experience_count ? 'text-emerald-600 dark:text-emerald-400' : 'text-zinc-400 dark:text-zinc-500' %>">
            <%= @completed_count %>/<%= @experience_count %>
          </span>
        <% end %>
      </div>
    </div>

    <% if @experiences.any? %>
      <div class="border-t border-zinc-100 dark:border-zinc-700">
        <% @experiences.each_with_index do |experience, i| %>
          <% visited = @forked_experience_codes.include?(experience.code) %>
          <%= link_to topic_experience_path(@topic.code, experience.code), class: "block px-4 py-2.5 hover:bg-zinc-50 dark:hover:bg-zinc-700/50 #{'border-t border-zinc-100 dark:border-zinc-700' unless i == 0}" do %>
            <div class="text-[14px] <%= visited ? 'text-purple-600 dark:text-purple-400' : 'text-blue-600 dark:text-blue-400' %>"><%= experience.name.html_safe %></div>
            <div class="text-[13px] text-zinc-500 dark:text-zinc-400 mt-0.5"><%= experience.description.html_safe %></div>
          <% end %>
        <% end %>
      </div>
    <% elsif @topic.populating? %>
      <div class="border-t border-zinc-100 dark:border-zinc-700">
        <div class="p-8 text-center">
          <div class="flex items-center justify-center gap-2 text-zinc-500 dark:text-zinc-400">
            <svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="text-sm">Generating experiences...</span>
          </div>
        </div>
      </div>
    <% else %>
      <div class="border-t border-zinc-100 dark:border-zinc-700">
        <div class="px-4 py-3 flex items-center justify-between">
          <p class="text-zinc-500 dark:text-zinc-400 text-sm">No experiences yet</p>
          <% if admin? %>
            <%= button_to populate_topic_path(@topic.code),
                method: :post,
                class: "inline-flex items-center gap-1.5 rounded-md border border-zinc-300 dark:border-zinc-600 bg-white dark:bg-zinc-800 hover:bg-zinc-50 dark:hover:bg-zinc-700 px-3 py-1.5 text-sm font-medium text-zinc-700 dark:text-zinc-300 transition-colors",
                data: { turbo_confirm: "Populate #{@topic.name} with new experiences?" } do %>
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v16m8-8H4"/>
              </svg>
              <span>Populate</span>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </section>
</div>