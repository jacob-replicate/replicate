<header>
  <!-- Google Fonts for luxury typography -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@300;400;500&display=swap" rel="stylesheet">

  <nav class="pt-2">
    <!-- Top row: Brand + Breadcrumb (md+) + Toggle -->
    <div class="flex items-center justify-between">
      <!-- Left: Brand -->
      <div class="flex-shrink-0">
        <div class="flex flex-col gap-[10px] text-[19px]">
          <a href="<%= root_path %>" style="font-family: 'Roboto Mono', monospace;" class="tracking-tight text-zinc-900 dark:text-zinc-100"><span style="font-weight: 500;">invariant</span><span style="font-weight: 400; margin: 0 -0.05em;">.</span><span style="font-weight: 500;" class="text-purple-500 tracking-tight">training</span></a>
        </div>

        <div class="text-[13px] flex gap-x-4 mt-[3px]">
          <% %i[privacy security terms].each do |action| %>
            <% if controller_name == 'static' && action_name == action.to_s %>
              <span class="text-zinc-800 dark:text-zinc-100 font-semibold"><%= action.to_s.capitalize %></span>
            <% else %>
              <a href="/<%= action %>" class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300 hover:underline hover:underline-offset-8"><%= action.to_s.capitalize %></a>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Right: Breadcrumb (md+ inline) + Signature (index only) + Theme toggle -->
      <div class="flex items-center gap-4">
        <!-- Breadcrumb - hidden on mobile, shown inline on md+ -->
        <% unless controller_name == 'static' && action_name == 'index' %>
          <% if @topic.present? || @experience.present? %>
            <div class="hidden md:inline-flex items-center gap-[3px] rounded-md border border-zinc-200 dark:border-zinc-700/40 bg-zinc-100 dark:bg-zinc-800/50 px-3 py-1 text-[13px] font-mono">
              <span class="text-zinc-400 dark:text-zinc-500">/</span>

              <a
                href="<%= root_path %>"
                class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300"
              >
                home
              </a>

              <% if @topic.present? %>
                <span class="text-zinc-400 dark:text-zinc-500">/</span>

                <% if @experience.present? %>
                  <a
                    href="<%= topic_path(@topic.code) %>"
                    class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300"
                  >
                    <%= @topic.code %>
                  </a>

                  <span class="text-zinc-400 dark:text-zinc-500">/</span>

                  <% if controller_name == 'experiences' %>
                    <span class="text-zinc-800 dark:text-zinc-100 font-semibold">
                      <%= @experience.code %>
                    </span>
                  <% else %>
                    <a
                      href="<%= topic_experience_path(@topic.code, @experience.code) %>"
                      class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300"
                    >
                      <%= @experience.code %>
                    </a>
                  <% end %>
                <% else %>
                  <span class="text-zinc-800 dark:text-zinc-100 font-semibold">
                    <%= @topic.code %>
                  </span>
                <% end %>
              <% elsif @experience.present? %>
                <span class="text-zinc-400 dark:text-zinc-500">/</span>
                <span class="text-zinc-800 dark:text-zinc-100 font-semibold">
                  <%= @experience.code %>
                </span>
              <% end %>
            </div>
          <% end %>
        <% end %>

        <!-- Share buttons - on index and static pages -->
        <% if controller_name == 'static' && %w[index privacy security terms].include?(action_name) %>
          <%# Mobile: Native share button using Web Share API %>
          <button
            onclick="if (navigator.share) { navigator.share({ title: 'Incident Response Training', url: window.location.href }); } else { navigator.clipboard.writeText(window.location.href); alert('Link copied!'); }"
            class="md:hidden group relative"
            title="Share"
          >
            <div class="w-[28px] h-[28px] rounded-full bg-zinc-200 dark:bg-zinc-700 flex items-center justify-center group-hover:bg-zinc-300 dark:group-hover:bg-zinc-600">
              <svg class="w-4 h-4 text-zinc-700 dark:text-zinc-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
              </svg>
            </div>
          </button>

          <%# Desktop: Individual share icons %>
          <div class="hidden md:flex items-center gap-2">
              <%# LinkedIn share %>
              <%= link_to "https://www.linkedin.com/sharing/share-offsite/?url=#{CGI.escape(request.original_url)}", target: "_blank", class: "group relative", title: "Share on LinkedIn" do %>
                <img src="/icons/linkedin.png" class="w-[25px] h-[25px] rounded-full opacity-80 dark:opacity-90 group-hover:opacity-100" alt="Share on LinkedIn" />
              <% end %>
              <%# Twitter/X share %>
              <%= link_to "https://twitter.com/intent/tweet?url=#{CGI.escape(request.original_url)}", target: "_blank", class: "group relative", title: "Share on X" do %>
                <div class="w-[25px] h-[25px] rounded-full bg-black dark:bg-white flex items-center justify-center opacity-80 dark:opacity-90 group-hover:opacity-100">
                  <svg class="w-3.5 h-3.5 text-white dark:text-black" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                </div>
              <% end %>
              <%# Facebook share %>
              <%= link_to "https://www.facebook.com/sharer/sharer.php?u=#{CGI.escape(request.original_url)}", target: "_blank", class: "group relative", title: "Share on Facebook" do %>
                <div class="w-[25px] h-[25px] rounded-full bg-[#1877F2] flex items-center justify-center opacity-80 group-hover:opacity-100">
                  <svg class="w-3.5 h-3.5 text-white" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </div>
              <% end %>
              <%# Reddit share %>
              <%= link_to "https://www.reddit.com/submit?url=#{CGI.escape(request.original_url)}", target: "_blank", class: "group relative", title: "Share on Reddit" do %>
                <img src="/icons/reddit.png" class="w-[25px] h-[25px] rounded-full opacity-80 dark:opacity-90 group-hover:opacity-100" alt="Share on Reddit" />
              <% end %>
              <%# Email share %>
              <%= link_to "mailto:?body=#{CGI.escape(request.original_url)}", class: "group relative", title: "Share via Email" do %>
                <div class="w-[25px] h-[25px] rounded-full bg-[#EA4335] flex items-center justify-center opacity-80 group-hover:opacity-100">
                  <svg class="w-3.5 h-3.5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
              <% end %>
              <%# Copy link %>
              <button onclick="navigator.clipboard.writeText(window.location.href); this.querySelector('.copy-icon').classList.add('hidden'); this.querySelector('.check-icon').classList.remove('hidden'); setTimeout(() => { this.querySelector('.copy-icon').classList.remove('hidden'); this.querySelector('.check-icon').classList.add('hidden'); }, 1500)" class="group relative" title="Copy link">
                <div class="w-[25px] h-[25px] rounded-full bg-[#8B5CF6] flex items-center justify-center opacity-80 group-hover:opacity-100">
                  <svg class="w-3.5 h-3.5 text-white copy-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                  </svg>
                  <svg class="w-3.5 h-3.5 text-white check-icon hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
              </button>
          </div>
        <% end %>

        <!-- Separator -->
        <div class="hidden md:block w-px h-6 bg-zinc-200 dark:bg-zinc-700"></div>

        <!-- Login/User -->
        <% if logged_in? %>
          <div class="relative">
            <button type="button" onclick="this.nextElementSibling.classList.toggle('hidden')" class="flex items-center gap-1.5 rounded-full hover:ring-2 hover:ring-zinc-200 dark:hover:ring-zinc-700 transition-all">
              <img src="<%= current_user.avatar_url %>" class="w-[26px] h-[26px] rounded-full" alt="<%= current_user.name %>" referrerpolicy="no-referrer" />
            </button>
            <div class="hidden absolute right-0 mt-2 bg-white dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 rounded-lg shadow-lg py-1 z-50">
              <div class="px-3 py-2 border-b border-zinc-100 dark:border-zinc-700">
                <p class="text-sm font-medium text-zinc-800 dark:text-zinc-100 whitespace-nowrap"><%= current_user.name %></p>
                <p class="text-xs text-zinc-500 dark:text-zinc-400 whitespace-nowrap"><%= current_user.email %></p>
              </div>
              <%= button_to logout_path, method: :delete, class: "w-full text-left px-3 py-2 text-sm text-zinc-600 dark:text-zinc-300 hover:bg-zinc-50 dark:hover:bg-zinc-700" do %>
                Sign out
              <% end %>
            </div>
          </div>
        <%# Hidden sign-in button - kept in code but never shown %>
        <% elsif false && (controller_name != 'static' || action_name != 'index') %>
          <%= form_tag("/auth/google_oauth2", method: :post, class: "inline") do %>
            <button type="submit" class="inline-flex items-center gap-2 px-3 py-1.5 text-[13px] font-medium text-zinc-600 dark:text-zinc-300 bg-white dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 rounded-md hover:bg-zinc-50 dark:hover:bg-zinc-700 transition-colors">
              <svg class="w-4 h-4" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
              <span>Sign in</span>
            </button>
          <% end %>
        <% end %>

        <!-- Theme toggle -->
        <button
          id="theme-toggle"
          type="button"
          class="theme-toggle"
          aria-label="Toggle dark mode"
          title="Toggle dark mode"
        >
          <div class="theme-toggle-knob">
            <svg class="theme-toggle-icon theme-toggle-sun" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
            </svg>
            <svg class="theme-toggle-icon theme-toggle-moon" fill="currentColor" viewBox="0 0 20 20">
              <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
            </svg>
          </div>
        </button>
      </div>
    </div>

    <!-- Breadcrumb (mobile only - separate row) -->
    <% unless controller_name == 'static' && action_name == 'index' %>
      <% if @topic.present? || @experience.present? %>
        <div class="mt-3 md:hidden">
          <div class="inline-flex items-center gap-[3px] rounded-md border border-zinc-200 dark:border-zinc-700/40 bg-zinc-100 dark:bg-zinc-800/50 px-3 py-1 text-[13px] font-mono">
            <span class="text-zinc-400 dark:text-zinc-500">/</span>

            <a
              href="<%= root_path %>"
              class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300"
            >
              home
            </a>

            <% if @topic.present? %>
              <span class="text-zinc-400 dark:text-zinc-500">/</span>

              <% if @experience.present? %>
                <a
                  href="<%= topic_path(@topic.code) %>"
                  class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300"
                >
                  <%= @topic.code %>
                </a>

                <span class="text-zinc-400 dark:text-zinc-500">/</span>

                <% if controller_name == 'experiences' %>
                  <span class="text-zinc-800 dark:text-zinc-100 font-semibold">
                    <%= @experience.code %>
                  </span>
                <% else %>
                  <a
                    href="<%= topic_experience_path(@topic.code, @experience.code) %>"
                    class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300"
                  >
                    <%= @experience.code %>
                  </a>
                <% end %>
              <% else %>
                <span class="text-zinc-800 dark:text-zinc-100 font-semibold">
                  <%= @topic.code %>
                </span>
              <% end %>
            <% elsif @experience.present? %>
              <span class="text-zinc-400 dark:text-zinc-500">/</span>
              <span class="text-zinc-800 dark:text-zinc-100 font-semibold">
                <%= @experience.code %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggle = document.getElementById('theme-toggle');
    if (!toggle) return;

    toggle.addEventListener('click', function() {
      const html = document.documentElement;
      const isDark = html.classList.contains('dark');

      if (isDark) {
        html.classList.remove('dark');
        localStorage.setItem('theme', 'light');
      } else {
        html.classList.add('dark');
        localStorage.setItem('theme', 'dark');
      }
    });
  });
</script>