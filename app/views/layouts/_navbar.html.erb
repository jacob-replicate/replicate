<header class="">
  <nav class="flex items-center justify-between pt-2">
    <div class="flex md:flex-1">
      <a href="<%= root_path %>" class="text-[#111] tracking-tight text-[22px] md:text-[26px]" style="font-family: 'Reckless Neue'">
        replicat<span style="letter-spacing: -0.08em;">e</span><span style="letter-spacing: 0.02em;">.</span>info
      </a>
    </div>

    <!-- Desktop menu -->
    <div class="hidden md:flex md:gap-x-10">
      <a href="/terms" class="text-sm text-sky-700 hover:underline hover:underline-offset-8">Terms</a>
      <a href="/security" class="text-sm text-sky-700 hover:underline hover:underline-offset-8">Security</a>
      <a href="mailto:support@replicate.info" class="text-sm text-sky-700 hover:underline hover:underline-offset-8 hidden lg:block">Support</a>
    </div>

    <div class="flex flex-1 justify-end">
      <% if @conversation.present? %>
        <div class="bg-neutral-400 rounded-md flex" id="difficulty">
          <% ["Junior", "Mid", "Senior", "Staff+"].each do |difficulty| %>
            <button type="button" aria-disabled="false" class="px-[10px] py-[6px] text-[13px]">
              <%= difficulty %>
            </button>
          <% end %>
        </div>
      <% else %>
          <a class="inline-block text-[15px] text-white bg-indigo-600 hover:bg-indigo-800 cursor-pointer font-semibold transition-all rounded-md px-3 py-2" href="/sev">
            Fix a SEV-1
          </a>
      <% end %>
    </div>
  </nav>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="md:hidden hidden fixed inset-0 z-50 overflow-y-auto bg-gray-100 pt-6 px-4 sm:max-w-sm sm:ring-1 sm:ring-white/10" role="dialog" aria-modal="true">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <a href="<%= root_path %>" class="text-[#111] tracking-tight text-[26px]" style="font-family: 'Reckless Neue'">
          replicat<span style="letter-spacing: -0.08em;">e</span><span style="letter-spacing: 0.02em;">.</span>info
        </a>
      </div>
      <button
        type="button"
        class="text-gray-600 hover:text-gray-800 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
        onclick="document.getElementById('mobile-menu').classList.add('hidden')"
        aria-label="Close menu"
      >
        <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18" />
          <line x1="6" y1="6" x2="18" y2="18" />
        </svg>
      </button>
    </div>
    <div class="mt-6 flow-root">
      <div class="-my-6 divide-y divide-gray-500/25">
        <div class="space-y-2 py-6">
          <% mobile_button_classes = "-mx-3 block rounded-lg px-3 py-2 text-base text-sky-700" %>
          <a href="/terms" class="<%= mobile_button_classes %>">Terms</a>
          <a href="/security" class="<%= mobile_button_classes %>">Security</a>
          <a href="mailto:support@replicate.info" class="<%= mobile_button_classes %>">Support</a>
        </div>
      </div>
    </div>
  </div>
</header>