<header>
  <!-- Google Fonts for luxury typography -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@300;400;500&display=swap" rel="stylesheet">

  <nav class="pt-2">
    <!-- Top row: Brand + Breadcrumb (md+) + Toggle -->
    <div class="flex items-center justify-between">
      <!-- Left: Brand -->
      <div class="flex-shrink-0">
        <div class="flex flex-col gap-[10px] text-[19px]">
          <a href="<%= root_path %>" style="font-family: 'Roboto Mono', monospace;" class="tracking-tight text-zinc-900 dark:text-zinc-100"><span style="font-weight: 500;">invariant</span><span style="font-weight: 400; margin: 0 -0.05em;">.</span><span style="font-weight: 500;" class="text-purple-500 tracking-tight">training</span></a>
        </div>

        <div class="text-[13px] flex gap-x-4 mt-[3px]">
          <% %i[privacy security terms].each do |action| %>
            <% if controller_name == 'static' && action_name == action.to_s %>
              <span class="text-zinc-800 dark:text-zinc-100 font-semibold"><%= action.to_s.capitalize %></span>
            <% else %>
              <a href="/<%= action %>" class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300 hover:underline hover:underline-offset-8"><%= action.to_s.capitalize %></a>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Right: Breadcrumb (md+ inline) + Signature (index only) + Theme toggle -->
      <div class="flex items-center gap-4">
        <!-- Breadcrumb - hidden on mobile, shown inline on md+ -->
        <% unless controller_name == 'static' && action_name == 'index' %>
          <% if @topic.present? || @experience.present? %>
            <div class="hidden md:inline-flex items-center gap-[3px] rounded-md border border-zinc-200 dark:border-zinc-700/40 bg-zinc-100 dark:bg-zinc-800/50 px-3 py-1 text-[13px] font-mono">
              <span class="text-zinc-400 dark:text-zinc-500">/</span>

              <a
                href="<%= root_path %>"
                class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300"
              >
                home
              </a>

              <% if @topic.present? %>
                <span class="text-zinc-400 dark:text-zinc-500">/</span>

                <% if @experience.present? %>
                  <a
                    href="<%= topic_path(@topic.code) %>"
                    class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300"
                  >
                    <%= @topic.code %>
                  </a>

                  <span class="text-zinc-400 dark:text-zinc-500">/</span>

                  <% if controller_name == 'experiences' %>
                    <span class="text-zinc-800 dark:text-zinc-100 font-semibold">
                      <%= @experience.code %>
                    </span>
                  <% else %>
                    <a
                      href="<%= topic_experience_path(@topic.code, @experience.code) %>"
                      class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300"
                    >
                      <%= @experience.code %>
                    </a>
                  <% end %>
                <% else %>
                  <span class="text-zinc-800 dark:text-zinc-100 font-semibold">
                    <%= @topic.code %>
                  </span>
                <% end %>
              <% elsif @experience.present? %>
                <span class="text-zinc-400 dark:text-zinc-500">/</span>
                <span class="text-zinc-800 dark:text-zinc-100 font-semibold">
                  <%= @experience.code %>
                </span>
              <% end %>
            </div>
          <% end %>
        <% end %>

        <!-- Compact signature - on index and static pages -->
        <% if controller_name == 'static' && %w[index privacy security terms].include?(action_name) %>
          <div class="hidden md:flex items-center gap-3.5">
            <span class="text-[15px] font-medium tracking-wide signature text-zinc-700 dark:text-white">Jacob Comer</span>
            <div class="flex items-center gap-2.5">
              <%= link_to 'https://linkedin.com/in/jacobcomer', target: "_blank", class: "group relative" do %>
                <img src="/icons/linkedin.png" class="w-[24px] h-[24px] rounded-full opacity-90 dark:opacity-100 group-hover:opacity-100 transition-all duration-200 group-hover:scale-110" alt="LinkedIn" />
              <% end %>
              <%= link_to 'https://instagram.com/jacob_comer', target: "_blank", class: "group relative" do %>
                <img src="/icons/instagram.png" class="w-[24px] h-[24px] rounded-full opacity-90 dark:opacity-100 group-hover:opacity-100 transition-all duration-200 group-hover:scale-110" alt="Instagram" />
              <% end %>
              <%= link_to 'https://jacobcomer.medium.com/write-code-faster-in-vim-c564ff9b9f6c', target: "_blank", class: "group relative" do %>
                <img src="/icons/medium.png" class="w-[24px] h-[24px] rounded-full opacity-90 group-hover:opacity-100 transition-all duration-200 group-hover:scale-110 dark:hidden" alt="Medium" />
                <img src="/icons/medium-dark.png" class="w-[24px] h-[24px] rounded-full opacity-100 group-hover:opacity-100 transition-all duration-200 group-hover:scale-110 hidden dark:block" alt="Medium" />
              <% end %>
              <%= link_to 'https://www.reddit.com/user/jacob_the_snacob', target: "_blank", class: "group relative" do %>
                <img src="/icons/reddit.png" class="w-[24px] h-[24px] rounded-full opacity-90 dark:opacity-100 group-hover:opacity-100 transition-all duration-200 group-hover:scale-110" alt="Reddit" />
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Separator -->
        <div class="hidden md:block w-px h-6 bg-zinc-200 dark:bg-zinc-700"></div>

        <!-- Login/User -->
        <% if logged_in? %>
          <div class="relative">
            <button type="button" onclick="this.nextElementSibling.classList.toggle('hidden')" class="flex items-center gap-1.5 rounded-full hover:ring-2 hover:ring-zinc-200 dark:hover:ring-zinc-700 transition-all">
              <img src="<%= current_user.avatar_url %>" class="w-[26px] h-[26px] rounded-full" alt="<%= current_user.name %>" referrerpolicy="no-referrer" />
            </button>
            <div class="hidden absolute right-0 mt-2 bg-white dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 rounded-lg shadow-lg py-1 z-50">
              <div class="px-3 py-2 border-b border-zinc-100 dark:border-zinc-700">
                <p class="text-sm font-medium text-zinc-800 dark:text-zinc-100 whitespace-nowrap"><%= current_user.name %></p>
                <p class="text-xs text-zinc-500 dark:text-zinc-400 whitespace-nowrap"><%= current_user.email %></p>
              </div>
              <%= button_to logout_path, method: :delete, class: "w-full text-left px-3 py-2 text-sm text-zinc-600 dark:text-zinc-300 hover:bg-zinc-50 dark:hover:bg-zinc-700" do %>
                Sign out
              <% end %>
            </div>
          </div>
        <%# Hidden sign-in button - kept in code but never shown %>
        <% elsif false && (controller_name != 'static' || action_name != 'index') %>
          <%= form_tag("/auth/google_oauth2", method: :post, class: "inline") do %>
            <button type="submit" class="inline-flex items-center gap-2 px-3 py-1.5 text-[13px] font-medium text-zinc-600 dark:text-zinc-300 bg-white dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 rounded-md hover:bg-zinc-50 dark:hover:bg-zinc-700 transition-colors">
              <svg class="w-4 h-4" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
              <span>Sign in</span>
            </button>
          <% end %>
        <% end %>

        <!-- Theme toggle -->
        <button
          id="theme-toggle"
          type="button"
          class="theme-toggle"
          aria-label="Toggle dark mode"
          title="Toggle dark mode"
        >
          <div class="theme-toggle-knob">
            <svg class="theme-toggle-icon theme-toggle-sun" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
            </svg>
            <svg class="theme-toggle-icon theme-toggle-moon" fill="currentColor" viewBox="0 0 20 20">
              <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
            </svg>
          </div>
        </button>
      </div>
    </div>

    <!-- Breadcrumb (mobile only - separate row) -->
    <% unless controller_name == 'static' && action_name == 'index' %>
      <% if @topic.present? || @experience.present? %>
        <div class="mt-3 md:hidden">
          <div class="inline-flex items-center gap-[3px] rounded-md border border-zinc-200 dark:border-zinc-700/40 bg-zinc-100 dark:bg-zinc-800/50 px-3 py-1 text-[13px] font-mono">
            <span class="text-zinc-400 dark:text-zinc-500">/</span>

            <a
              href="<%= root_path %>"
              class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300"
            >
              home
            </a>

            <% if @topic.present? %>
              <span class="text-zinc-400 dark:text-zinc-500">/</span>

              <% if @experience.present? %>
                <a
                  href="<%= topic_path(@topic.code) %>"
                  class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300"
                >
                  <%= @topic.code %>
                </a>

                <span class="text-zinc-400 dark:text-zinc-500">/</span>

                <% if controller_name == 'experiences' %>
                  <span class="text-zinc-800 dark:text-zinc-100 font-semibold">
                    <%= @experience.code %>
                  </span>
                <% else %>
                  <a
                    href="<%= topic_experience_path(@topic.code, @experience.code) %>"
                    class="text-[#0066cc] dark:text-blue-400 hover:text-[#004499] dark:hover:text-blue-300"
                  >
                    <%= @experience.code %>
                  </a>
                <% end %>
              <% else %>
                <span class="text-zinc-800 dark:text-zinc-100 font-semibold">
                  <%= @topic.code %>
                </span>
              <% end %>
            <% elsif @experience.present? %>
              <span class="text-zinc-400 dark:text-zinc-500">/</span>
              <span class="text-zinc-800 dark:text-zinc-100 font-semibold">
                <%= @experience.code %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggle = document.getElementById('theme-toggle');
    if (!toggle) return;

    toggle.addEventListener('click', function() {
      const html = document.documentElement;
      const isDark = html.classList.contains('dark');

      if (isDark) {
        html.classList.remove('dark');
        localStorage.setItem('theme', 'light');
      } else {
        html.classList.add('dark');
        localStorage.setItem('theme', 'dark');
      }
    });
  });
</script>