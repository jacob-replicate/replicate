<div class="lg:max-w-3xl mx-auto py-8">
  <h1 class="text-2xl font-semibold mb-4">Unsubscribe from Replicate</h1>

  <p class="mb-2">
    <span class="font-semibold"><%= @contact.email %></span> will stop receiving messages.
  </p>

  <div class="mt-6 flex items-center gap-3">
    <%= form_with url: "/contacts/#{@contact.id}/unsubscribe", method: :post, local: true do %>
      <%= submit_tag "Unsubscribe", class: "px-4 py-2 rounded bg-red-600 text-white font-semibold" %>
    <% end %>

    <%= link_to "Cancel", root_path, class: "px-4 py-2 rounded border font-semibold" %>
  </div>
</div>