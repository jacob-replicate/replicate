<div class="max-w-3xl mx-auto py-8">
  <h1 class="text-2xl font-semibold mb-4">Resubscribe to Replicate</h1>

  <p class="mb-4">
    <span class="font-semibold"><%= @contact.email %></span> will start receiving messages again.
  </p>

  <div class="mt-6 flex items-center gap-3">
    <%= form_with url: "/contacts/#{@contact.id}/resubscribe", method: :post, local: true do %>
      <%= submit_tag "Resubscribe", class: "px-4 py-2 rounded bg-green-600 text-white font-semibold hover:bg-green-700" %>
    <% end %>

    <%= link_to "Cancel", root_path, class: "px-4 py-2 rounded border font-semibold" %>
  </div>
</div>