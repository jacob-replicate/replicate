<% if Rails.env.production? %>
  <div class="mt-16 md:mt-24 text-center">
    <div class="inline-block bg-white dark:bg-zinc-800 rounded-lg shadow-sm border border-zinc-200 dark:border-zinc-700 px-8 py-10 max-w-lg">
      <h1 class="text-2xl font-semibold text-zinc-800 dark:text-zinc-100 mb-4">Work in Progress</h1>
      <p class="text-[15px] text-zinc-600 dark:text-zinc-300 leading-relaxed">
        Browser-based infrastructure and security puzzles. No installs, just broken systems to debug.
      </p>
      <p class="text-[13px] text-zinc-400 dark:text-zinc-500 mt-6">
        Check back soon.
      </p>
    </div>
  </div>
<% else %>
  <div class="mt-2 md:mt-4 text-[15px] text-zinc-500 dark:text-zinc-400 leading-relaxed tracking-[-0.01em]">Pick a topic you don't get to practice much outside of production fires. GPT asks hard infra/sec questions until you mess up, then coaches you through the blind spot. <span class="font-medium text-zinc-700 dark:text-zinc-200">100% free</span>. It's a side project, not a SaaS company.</div>
  <div class="space-y-8 mt-6">

    <% @categories.each do |category| %>
      <section>
        <h2 class="text-[14px] font-medium text-zinc-700 dark:text-zinc-300 tracking-wide mb-2 px-1"><%= category.name %></h2>
        <div class="bg-white dark:bg-zinc-800 rounded-lg shadow-sm overflow-hidden border border-zinc-200 dark:border-zinc-700">
          <% category.topics.each_with_index do |topic, i| %>
            <% progress = @topic_progress[topic.id] || { completed: 0, total: 0 } %>
            <% done = progress[:completed] == progress[:total] && progress[:total] > 0 %>
            <% visited = @started_topic_ids.include?(topic.id) %>
            <%= link_to topic_path(topic.code), class: "block px-4 py-2.5 hover:bg-zinc-50 dark:hover:bg-zinc-700/50 #{'border-t border-zinc-100 dark:border-zinc-700' unless i == 0}" do %>
              <div class="flex items-center justify-between gap-3">
                <div class="flex-1 min-w-0">
                  <div class="text-[14px] <%= visited ? 'text-purple-600 dark:text-purple-400' : 'text-blue-600 dark:text-blue-400' %>"><%= topic.name %></div>
                  <div class="text-[13px] text-zinc-500 dark:text-zinc-400 mt-0.5"><%= topic.description %></div>
                </div>
                <span class="text-[11px] tabular-nums flex-shrink-0 <%= done ? 'text-emerald-600 dark:text-emerald-400' : 'text-zinc-400 dark:text-zinc-500' %>">
                  <%= progress[:completed] %>/<%= progress[:total] %>
                </span>
              </div>
            <% end %>
          <% end %>
        </div>
      </section>
    <% end %>

    <% if @uncategorized_topics.any? %>
      <section>
        <h2 class="text-[13px] font-medium text-red-500 dark:text-red-400 tracking-wide mb-2 px-1">Uncategorized</h2>
        <div class="bg-white dark:bg-zinc-800 rounded-lg shadow-sm ring-1 ring-red-200/50 dark:ring-red-800/50 overflow-hidden">
          <% @uncategorized_topics.each_with_index do |topic, i| %>
            <% progress = @topic_progress[topic.id] || { completed: 0, total: 0 } %>
            <% done = progress[:completed] == progress[:total] && progress[:total] > 0 %>
            <% visited = @started_topic_ids.include?(topic.id) %>
            <%= link_to topic_path(topic.code), class: "block px-4 py-2.5 hover:bg-red-50 dark:hover:bg-red-900/30 #{'border-t border-red-100 dark:border-red-900/50' unless i == 0}" do %>
              <div class="flex items-center justify-between gap-3">
                <div class="flex-1 min-w-0">
                  <div class="text-[14px] <%= visited ? 'text-purple-600 dark:text-purple-400' : 'text-blue-600 dark:text-blue-400' %>"><%= topic.name %></div>
                  <div class="text-[13px] text-zinc-500 dark:text-zinc-400 mt-0.5"><%= topic.description %></div>
                </div>
                <span class="text-[11px] tabular-nums flex-shrink-0 <%= done ? 'text-emerald-600 dark:text-emerald-400' : 'text-red-400 dark:text-red-500' %>">
                  <%= progress[:completed] %>/<%= progress[:total] %>
                </span>
              </div>
            <% end %>
          <% end %>
        </div>
      </section>
    <% end %>
  </div>
<% end %>