<% if Rails.env.production? %>
  <div class="mt-16 md:mt-24 text-center">
    <div class="inline-block bg-white dark:bg-zinc-800 rounded-lg shadow-sm border border-zinc-200 dark:border-zinc-700 px-8 py-10 max-w-lg">
      <h1 class="text-2xl font-semibold text-zinc-800 dark:text-zinc-100 mb-4">Work in Progress</h1>
      <p class="text-[15px] text-zinc-600 dark:text-zinc-300 leading-relaxed">
        Browser-based infrastructure and security puzzles. No installs, just broken systems to debug.
      </p>
      <p class="text-[13px] text-zinc-400 dark:text-zinc-500 mt-6">
        Check back soon.
      </p>
    </div>
  </div>
<% else %>

  <div class="mt-3 text-[15px] text-zinc-600 dark:text-zinc-400 leading-relaxed">
    It's a pressure test for engineers who want to drill their SRE fundamentals. Prove you understand each area. GPT will push back if you hand wave through the details. <span class="font-semibold">100% free</span>. It helps find gaps in your mental model.
  </div>

  <div class="space-y-8 mt-6">

    <% @categories.each do |category| %>
      <%
        category_completed = category.topics.sum { |t| (@topic_progress[t.id] || { completed: 0 })[:completed] }
        category_total = category.topics.sum { |t| (@topic_progress[t.id] || { total: 0 })[:total] }
        category_pct = category_total > 0 ? (category_completed.to_f / category_total * 100).round : 0
      %>
      <section>
        <div class="flex items-center justify-between mb-2">
          <h2 class="text-[15px] font-medium text-zinc-700 dark:text-zinc-300 tracking-wide"><%= category.name %></h2>
          <% if category_total > 0 %>
            <div class="flex items-center gap-2.5">
              <div class="w-28 h-2 bg-zinc-200 dark:bg-zinc-700 rounded-full overflow-hidden">
                <div class="h-full <%= category_pct == 100 ? 'bg-emerald-500' : 'bg-blue-500' %> rounded-full transition-all" style="width: <%= category_pct %>%"></div>
              </div>
              <span class="text-[12px] font-medium tabular-nums <%= category_pct == 100 ? 'text-emerald-600 dark:text-emerald-400' : 'text-zinc-500 dark:text-zinc-400' %>"><%= category_pct %>%</span>
            </div>
          <% end %>
        </div>
        <div class="bg-white dark:bg-zinc-800 rounded-md shadow-sm overflow-hidden border-2 border-zinc-400 dark:border-zinc-600">
          <% category.topics.each_with_index do |topic, i| %>
            <% progress = @topic_progress[topic.id] || { completed: 0, total: 0 } %>
            <% done = progress[:completed] == progress[:total] && progress[:total] > 0 %>
            <% visited = @started_topic_ids.include?(topic.id) %>
            <%= link_to topic_path(topic.code), class: "block px-4 py-3 hover:bg-zinc-50 dark:hover:bg-zinc-700/50 #{'border-t border-zinc-200 dark:border-zinc-600' unless i == 0}" do %>
              <div class="flex items-center justify-between gap-3">
                <div class="flex-1 min-w-0">
                  <div class="text-[14px] <%= visited ? 'text-purple-600 dark:text-purple-400' : 'text-blue-600 dark:text-blue-400' %>"><%= topic.name %></div>
                  <div class="text-[13px] text-zinc-500 dark:text-zinc-400 mt-0.5"><%= topic.description %></div>
                </div>
                <span class="text-[11px] tabular-nums flex-shrink-0 <%= done ? 'text-emerald-600 dark:text-emerald-400' : 'text-zinc-400 dark:text-zinc-500' %>">
                  <%= progress[:completed] %>/<%= progress[:total] %>
                </span>
              </div>
            <% end %>
          <% end %>
        </div>
      </section>
    <% end %>

    <% if @uncategorized_topics.any? %>
      <section>
        <h2 class="text-[13px] font-medium text-red-500 dark:text-red-400 tracking-wide mb-2">Uncategorized</h2>
        <div class="bg-white dark:bg-zinc-800 rounded-md shadow ring-2 ring-red-300/60 dark:ring-red-700/60 overflow-hidden">
          <% @uncategorized_topics.each_with_index do |topic, i| %>
            <% progress = @topic_progress[topic.id] || { completed: 0, total: 0 } %>
            <% done = progress[:completed] == progress[:total] && progress[:total] > 0 %>
            <% visited = @started_topic_ids.include?(topic.id) %>
            <%= link_to topic_path(topic.code), class: "block px-4 py-3 hover:bg-red-50 dark:hover:bg-red-900/30 #{'border-t border-red-200 dark:border-red-800/60' unless i == 0}" do %>
              <div class="flex items-center justify-between gap-3">
                <div class="flex-1 min-w-0">
                  <div class="text-[14px] <%= visited ? 'text-purple-600 dark:text-purple-400' : 'text-blue-600 dark:text-blue-400' %>"><%= topic.name %></div>
                  <div class="text-[13px] text-zinc-500 dark:text-zinc-400 mt-0.5"><%= topic.description %></div>
                </div>
                <span class="text-[11px] tabular-nums flex-shrink-0 <%= done ? 'text-emerald-600 dark:text-emerald-400' : 'text-red-400 dark:text-red-500' %>">
                  <%= progress[:completed] %>/<%= progress[:total] %>
                </span>
              </div>
            <% end %>
          <% end %>
        </div>
      </section>
    <% end %>
  </div>
<% end %>