<% if Rails.env.production? || true %>
  <div class="mt-16 md:mt-24 text-center">
    <div class="inline-block bg-white dark:bg-zinc-800 rounded-lg shadow-sm border-[1.5px] border-[#b0b0b0] dark:border-[#333333] px-8 py-10 max-w-lg">
      <h1 class="text-2xl font-semibold text-zinc-800 dark:text-zinc-100 mb-4">Work in Progress</h1>
      <p class="text-[15px] text-zinc-600 dark:text-zinc-300 leading-relaxed">
        Browser-based infrastructure and security puzzles. No installs, just broken systems to debug.
      </p>
      <p class="text-[13px] text-zinc-400 dark:text-zinc-500 mt-6">
        Check back soon.
      </p>
    </div>
  </div>
<% else %>
<div class="space-y-6 mt-2 md:mt-4">
  <% @categories.each do |category| %>
    <section class="bg-white dark:bg-zinc-800 rounded-lg shadow-sm overflow-hidden border-[1.5px] border-[#b0b0b0] dark:border-[#333333]">
      <div class="px-4 pt-4 pb-3">
        <h2 class="text-[15px] font-semibold text-zinc-800 dark:text-zinc-100"><%= category.name %></h2>
        <p class="text-[13px] text-zinc-500 dark:text-zinc-400 mt-0.5"><%= category.description %></p>
      </div>

      <div class="border-t border-zinc-100 dark:border-zinc-700">
        <% category.topics.each_with_index do |topic, i| %>
          <%= link_to topic_path(topic.code), class: "topic-link block px-4 py-2.5 hover:bg-zinc-50 dark:hover:bg-zinc-700/50 #{'border-t border-zinc-100 dark:border-zinc-700' unless i == 0}" do %>
            <div class="text-[14px]"><%= topic.name %></div>
            <div class="text-[13px] text-zinc-500 dark:text-zinc-400 mt-0.5"><%= topic.description %></div>
          <% end %>
        <% end %>
      </div>
    </section>
  <% end %>

  <% if @uncategorized_topics.any? %>
    <section class="bg-white dark:bg-zinc-800 rounded-lg shadow-sm ring-1 ring-red-200/50 dark:ring-red-800/50 overflow-hidden">
      <div class="px-4 pt-4 pb-3">
        <h2 class="text-[15px] font-semibold text-red-600 dark:text-red-400">Uncategorized</h2>
      </div>
      <div class="border-t border-red-100 dark:border-red-900/50">
        <% @uncategorized_topics.each_with_index do |topic, i| %>
          <%= link_to topic_path(topic.code), class: "block px-4 py-2.5 hover:bg-red-50 dark:hover:bg-red-900/30 #{'border-t border-red-100 dark:border-red-900/50' unless i == 0}" do %>
            <div class="text-[14px] text-red-600 dark:text-red-400"><%= topic.name %></div>
            <div class="text-[13px] text-zinc-500 dark:text-zinc-400 mt-0.5"><%= topic.description %></div>
          <% end %>
        <% end %>
      </div>
    </section>
  <% end %>
</div>
<% end %>